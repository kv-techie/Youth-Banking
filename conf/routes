# Routes for Youth Banking API

# Payee endpoints
GET     /api/payees/:accountId              controllers.PayeeController.getPayees(accountId: String)
POST    /api/payees/:accountId/add          controllers.PayeeController.addPayee(accountId: String)
DELETE  /api/payees/:accountId/:payeeId     controllers.PayeeController.removePayee(accountId: String, payeeId: String)

# Parent endpoints
GET     /api/parent/:parentId/dashboard     controllers.ParentController.getDashboard(parentId: String)
POST    /api/parent/approve/:approvalId     controllers.ParentController.approveTransaction(approvalId: String)
POST    /api/parent/reject/:approvalId      controllers.ParentController.rejectTransaction(approvalId: String)
GET     /api/parent/:parentId/alerts        controllers.ParentController.getAlerts(parentId: String)

# Health check
GET     /health                             controllers.HomeController.health
